from cc_build import cc_library, cc_test


# The libraries
encoder_lib = cc_library(target='base64_encoder',
                         source=['base64_encoder.cc'])

decoder_lib = cc_library(target='base64_decoder',
                         source=['base64_decoder.cc'])


# The tests
cc_test(target='base64_encoder_unittest',
        source=[encoder_lib,
                'base64_encoder_unittest.cc'])

cc_test(target='base64_decoder_unittest',
        source=[decoder_lib,
                'base64_decoder_unittest.cc'])

cc_test(target='base64_test',
        source=[encoder_lib,
                decoder_lib,
                'base64_test.cc'])
