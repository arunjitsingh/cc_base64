import os


HOME = os.environ.get('HOME')
AJ_INCLUDES = [os.path.join(HOME, 'include')]
AJ_LIBPATHS = [os.path.join(HOME, 'lib')]

COMMON_CCFLAGS = []
DEBUG_CCFLAGS = ['-g']

INCLUDES = AJ_INCLUDES + ['../src']
LIBPATHS = AJ_LIBPATHS + ['../build']

env = Environment()
env['STATIC_AND_SHARED_OBJECTS_ARE_THE_SAME'] = True

encoder_lib = env.SharedLibrary(target='base64_encoder',
                                source=['base64_encoder.cc'],
                                CPPPATH=INCLUDES)

env.Program(target='base64_test',
            source=[encoder_lib,
                    'base64_test.cc'],
            CPPPATH=INCLUDES,
            LIBPATH=LIBPATHS)
